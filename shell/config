export EDITOR="/usr/local/bin/atom-beta"
export CLICOLOR=1
export LESS="-SXFR"
export LESS_OPTS=$LESS
export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:/usr/local/opt/libffi/lib/pkgconfig

source /usr/local/opt/chruby/share/chruby/chruby.sh

# Auto chruby doesn't play nice with iTerm2 shell integration
#source /usr/local/opt/chruby/share/chruby/auto.sh
# So we'll set a default ruby manually instead
chruby ruby-2.3.1
